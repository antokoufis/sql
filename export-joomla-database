SELECT `jos_content`.`ID`, `jos_content`.`title` AS "Post tilte", `jos_content`.`introtext`, `jos_content`.`fulltext`, `jos_content`.`state`, `jos_content`.`created`, `jos_content`.`modified`, `jos_categories`.`title` AS "Category Title", `jos_users`.`username`,`jos_users`.`email` FROM `jos_content` LEFT JOIN `jos_users` ON `jos_content`.`created_by`=`jos_users`.`id` LEFT JOIN `jos_categories` ON `jos_content`.`catid`=`jos_categories`.`id`
